# /usr/share/bluwhale/Justfile
# System-wide just recipes for post-install setup

# Show this help menu
[group('General')]
menu:
    @just --justfile /usr/share/bluwhale/Justfile --list --list-heading "--- Bluwhale Command Menu ---\n"

# Install homebrew
[group('Post-Install Setup')]
setup-brew:
    just --justfile /usr/share/bluwhale/just/10-homebrew.just setup-brew

# Sync Dank Material Shell dotfiles
[group('Post-Install Setup')]
sync-dots:
    just --justfile /usr/share/bluwhale/just/20-sync-dots.just sync-dots
    
# Global system maintenance
[group('Maintenance')]
update-system:
    just --justfile /usr/share/bluwhale/just/30-maintenance.just update-system
