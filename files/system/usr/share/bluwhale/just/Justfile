# /usr/share/bluwhale/just/Justfile
# System-wide just recipes for post-install setup

# Sync base dotfiles (e.g., .bashrc, .gitconfig)
[group('Post-Install Setup')]
sync-dots:
    just --justfile /usr/share/bluwhale/just/20-sync-dots.just sync-dots

# Sync GNOME-specific settings (Text Editor, Shortcuts, Interface)
[group('Post-Install Setup')]
sync-gnome:
    just --justfile /usr/share/bluwhale/just/21-sync-gnome.just sync-gnome

# Backup current GNOME settings to the system backup directory
[group('Post-Install Setup')]
backup-gnome:
    just --justfile /usr/share/bluwhale/just/22-backup-gnome.just backup-gnome

# Secure Boot enrollment - uses universalblue public key
[group('Gaming')]
enroll-secure-boot:
    just --justfile /usr/share/bluwhale/just/50-secure-boot.just enroll-secure-boot

# Fish shell
[group('Post-Install Setup')]
set-fish-shell:
    just --justfile /usr/share/bluwhale/just/40-shell-fish.just set-fish-shell
